<config>
    
  <luceneMatchVersion>4.6</luceneMatchVersion>

  <requestHandler name="standard" class="solr.StandardRequestHandler" default="true">
    <lst name="defaults">
      <str name="echoParams">explicit</str>
     <int name="rows">10</int>
     <str name="fl">*</str>
     <str name="version">2.1</str>
    </lst>
  </requestHandler>

  <updateRequestProcessorChain key="mahout" default="true">
    <processor class="com.tamingtext.classifier.bayes.BayesUpdateRequestProcessorFactory">
      <str name="inputField">details</str>
      <str name="outputField">subject</str>
      <str name="scoreField">subjectScore</str>
      <str name="defaultCategory">unknown</str>
      <str name="model">src/test/resources/classifier/bayes/sample-model</str>
      <str name="dictionary">src/test/resources/classifier/bayes/sample-dictionary.fst</str>
      <str name="labels">src/test/resources/classifier/bayes/sample-label-index</str>
      <str name="termWeightMethod">TFIDF</str>
    </processor>
    <processor class="solr.RunUpdateProcessorFactory"/>
    <processor class="solr.LogUpdateProcessorFactory"/>
  </updateRequestProcessorChain>
</config>
